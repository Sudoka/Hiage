<?xml version="1.0" encoding="utf-8"?>
<object id="goomba">
    <type>enemy</type>
    <sprites>
        <sprite>goomba</sprite>
    </sprites>

    <!-- Physical properties -->
    <elasticity>0</elasticity>
    <friction>100</friction>
    <run-speed>40</run-speed>
    <max-speed>50</max-speed>

    <bounding-polygons>
        <polygon id="normal">
            <vertex x="-8" y="8" />
            <vertex x="8" y="8" />
            <vertex x="8" y="-8" />
            <vertex x="-8" y="-8" />
        </polygon>
    </bounding-polygons>
    <!-- Can be killed by being jumped on -->
    <stompable>true</stompable>
</object>
